# =============================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =============================================
# DATABASE CONFIGURATION
# =============================================
DB_NAME=quizdb
DB_USERNAME=quizuser
DB_PASSWORD=your-secure-db-password

# =============================================
# REDIS CONFIGURATION
# =============================================
REDIS_PASSWORD=your-redis-password

# =============================================
# MINIO CONFIGURATION
# =============================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=your-minio-password

# =============================================
# JWT CONFIGURATION
# =============================================
JWT_SECRET=your-production-jwt-secret-key-base64-encoded-minimum-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =============================================
# OAUTH2 CONFIGURATION
# =============================================
# Google OAuth2 (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Facebook OAuth2 (Get from Facebook Developers)
FACEBOOK_CLIENT_ID=your-production-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-production-facebook-client-secret

# =============================================
# FRONTEND CONFIGURATION
# =============================================
FRONTEND_URL=https://yourdomain.com
FRONTEND_ORIGIN=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com
VITE_API_URL=https://api.yourdomain.com

# =============================================
# MAIL CONFIGURATION
# =============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-production-email@gmail.com
MAIL_PASSWORD=your-production-app-password

# =============================================
# SPRING PROFILE
# =============================================
SPRING_PROFILES_ACTIVE=prod
